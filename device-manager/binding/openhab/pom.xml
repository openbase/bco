<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.openbase.bco</groupId>
    <artifactId>manager.device.binding.openhab</artifactId>
    <packaging>jar</packaging>

    <name>BCO Manager Device Binding OpenHAB</name>
    
    <parent>
        <groupId>org.openbase.bco</groupId>
        <artifactId>manager.device.binding</artifactId>
        <version>1.3-SNAPSHOT</version>
    </parent>    
    
    <url>https://github.com/openbase/bco.manager/wiki</url>

    <licenses>
        <license>
            <name>GPLv3</name>
            <url>http://www.gnu.org/licenses/lgpl.html</url>
        </license>
    </licenses>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.8.1</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>org.openbase.bco.manager.device.binding.openhab.util.configgen.OpenHABConfigGeneratorLauncher</mainClass>
                            <id>binding-openhab-config-generator</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.device.binding.openhab.util.configgen.OpenHABminConfigGenerator</mainClass>
                            <id>binding-openhab-habmin-zwave-config-updater</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.device.binding.openhab.DeviceBindingOpenHABLauncher</mainClass>
                            <id>binding-openhab-device-manager</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                    </programs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>${dependency.org.codehaus.mojo.license-maven-plugin.version}</version>
                <configuration>
                    <licenseName>gpl_v3</licenseName>
                </configuration>
                <executions>
                    <execution>
                        <id>first</id>
                        <goals>
                            <goal>update-file-header</goal>
                        </goals>
                        <phase>process-sources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>manager.device.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
            <scope>test</scope>
        </dependency>
        
        <!--        <dependency>
            hue binding
            <groupId>com.syncleus.philipshue</groupId>
            <artifactId>hue-local</artifactId>
            <version>1.8.1.0</version>
        </dependency>
        <dependency>
            hue binding
            <groupId>com.syncleus.philipshue</groupId>
            <artifactId>hue-resources</artifactId>
            <version>1.8.1.0</version>
        </dependency>-->
        <dependency>
            <!-- for openhab binding habmin zwave config gen -->
            <groupId>com.io7m.xom</groupId>
            <artifactId>xom</artifactId>
            <version>1.2.10</version>
        </dependency>
        <dependency>
            <!-- for openhab binding -->
            <groupId>org.openbase</groupId>
            <artifactId>jul.extension.rst.processing</artifactId>
            <version>${dependency.jul.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <!-- for openhab binding -->
            <groupId>org.openbase</groupId>
            <artifactId>jul.extension.openhab</artifactId>
            <version>${dependency.jul.version}</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
