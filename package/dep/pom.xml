                            <id>bco-task-server</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.dal.visual.BCOVisualRemote</mainClass>
                            <id>bco-visual-remote</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.bcozy.BCozyLauncher</mainClass>
                            <id>bcozy</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.dal.remote.printer.BCOLogger</mainClass>
                            <id>bco-logger</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.dal.remote.BCORemote</mainClass>
                            <id>bco-remote</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.dal.visual.action.BCOActionInspectorLauncher</mainClass>
                            <id>bco-action-inspector</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.device.openhab.OpenHABDeviceManagerLauncher</mainClass>
                            <id>bco-manager-device-openhab</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                    </programs>
                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <snapshotExpand>true</snapshotExpand>
                            <!-- expand "SNAPSHOT" to what is in the "USER" env variable -->
                            <snapshotEnv/>
                            <verbose>true</verbose>
                            <controlDir>${basedir}/src/main/deb/control</controlDir>
                            <dataSet>

                                <!-- Install Daemon-->
                                <!--data>
                                    <src>${basedir}/src/main/deb/init.d</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/etc/init.d</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                    </mapper>
                                </data-->

                                <!-- Copy Deps-->
                                <data>
                                    <src>${build.appassembler}/${build.appassembler.repo.name}</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/${deb.prefix.lib}</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                    </mapper>
                                </data>

                                <!-- Copy Bins-->
                                <data>
                                    <src>${build.appassembler}/${deb.prefix.bin}</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/${deb.prefix.bin}</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>
                                <!---->
                                <!-- Create Config/Template Folders-->
                                <data>
                                    <type>template</type>
                                    <paths>
                                        <path>etc/${project.artifactId}</path>
                                        <path>${deb.prefix.share}</path>
                                        <!--path>var/lib/${project.artifactId}</path-->
                                        <path>var/log/${project.artifactId}</path>
                                        <!--path>var/run/${project.artifactId}</path-->
                                    </paths>
                                    <mapper>
                                        <type>perm</type>
                                        <user>loader</user>
                                        <group>loader</group>
                                    </mapper>
                                </data>
                                <!---->
                                <!-- Copy Templates-->
                                <data>
                                    <src>${project.basedir}/src/main/template/db.tar.gz</src>
                                    <type>archive</type>
                                    <!--<includes>...</includes>-->
                                    <!--<excludes>...</excludes>-->
                                    <mapper>
                                        <type>perm</type>
                                        <strip>1</strip>
                                        <prefix>${deb.prefix.share}/template/db</prefix>
                                        <user>root</user>
                                        <group>root</group>
                                        <!--<filemode>600</filemode>-->
                                    </mapper>
                                </data>
                            </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <skipTests>true</skipTests>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <build.appassembler>${project.build.directory}/appassembler</build.appassembler>
        <build.appassembler.repo.name>share/bco/lib</build.appassembler.repo.name>
        <deb.prefix>usr</deb.prefix>
        <deb.prefix.lib>${deb.prefix}/${build.appassembler.repo.name}</deb.prefix.lib>
        <deb.prefix.bin>${deb.prefix}/bin</deb.prefix.bin>
        <deb.prefix.share>${deb.prefix}/share/${project.artifactId}</deb.prefix.share>
    </properties>

