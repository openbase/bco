                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>

                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>2.0.0</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-with-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                        <!--<configuration>-->
                        <!--<descriptorRefs>-->
                        <!--<descriptorRef>jar-with-dependencies</descriptorRef>-->
                        <!--</descriptorRefs>-->
                        <!--<appendAssemblyId>false</appendAssemblyId>-->
                        <!--</configuration>-->
                    </execution>
                </executions>
                <configuration>
                    <binFolder>${deb.prefix.bin}</binFolder>
                    <repositoryLayout>flat</repositoryLayout>
                    <repositoryName>${build.appassembler.repo.name}</repositoryName>
                    <programs>
                        <program>
                            <mainClass>org.openbase.bco.app.util.launch.BCOLauncher</mainClass>
                            <id>bco</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.app.util.launch.BCOTestLauncher</mainClass>
                            <id>bco-test</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.app.util.launch.BCOInterfacePrinter</mainClass>
                            <id>bco-print-interface-rsb</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.app.util.launch.BCOSystemValidator</mainClass>
                            <id>bco-validate</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.app.util.launch.BCOTrainDataGeneratorLauncher</mainClass>
                            <id>bco-generate-trainingdata</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.app.util.launch.BCOConsole</mainClass>
                            <id>bco-console</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.app.util.launch.LogoPrinter</mainClass>
                            <id>bco-logo</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.eveson.EvesonLauncher</mainClass>
                            <id>bco-eveson</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.ontology.lib.OntologyManagerLauncher</mainClass>
                            <id>bco-ontology-manager</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.registry.print.BCORegistryPrinter</mainClass>
                            <id>bco-print-registry</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.PSCLauncher</mainClass>
                            <id>bco-psc</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.CreateKinectLauncher</mainClass>
                            <id>bco-psc-create-kinect</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
