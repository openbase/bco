                            <id>bco-query</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.registry.launch.RegistryLauncher</mainClass>
                            <id>bco-registry</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.registry.editor.RegistryEditor</mainClass>
                            <id>bco-registry-editor</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.scene.visual.SceneEditor</mainClass>
                            <id>bco-scene-editor</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.stage.Stage</mainClass>
                            <id>bco-stage</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.dal.task.BCOTaskServerLauncher</mainClass>
                            <id>bco-task-server</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.BCOSystemValidator</mainClass>
                            <id>bco-validate</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.dal.visual.DalVisualRemote</mainClass>
                            <id>bco-visual-remote</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.bcozy.BCozyLauncher</mainClass>
                            <id>bcozy</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                    </programs>
                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <verbose>false</verbose>
                            <snapshotExpand>true</snapshotExpand>
                            <!-- expand "SNAPSHOT" to what is in the "USER" env variable -->
                            <snapshotEnv></snapshotEnv>
                            <verbose>true</verbose>
                            <controlDir>${basedir}/src/deb/control</controlDir>
                            <dataSet>

                                <!-- Install Daemon-->
                                <data>
                                    <src>${basedir}/src/deb/init.d</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/etc/init.d</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                    </mapper>
                                </data>

                                <!-- Copy Deps-->
                                <data>
                                    <src>${build.appassembler}/${appassembler.repo.name}</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/${deb.prefix.lib}</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                    </mapper>
                                </data>


                                <!-- Copy Bins-->
                                <data>
                                    <src>${build.appassembler}/${deb.prefix.bin}</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/${deb.prefix.bin}</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>

                                <!-- Link Bins -->
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-authenticator</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-authenticator</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-binding-openhab-config-generator</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-binding-openhab-config-generator</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-binding-openhab-habmin-zwave-config-updater</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-binding-openhab-habmin-zwave-config-updater</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-eveson</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-eveson</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-manager</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-manager</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-manager-device-fallback</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-manager-device-fallback</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-ontology-manager</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-ontology-manager</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-openhab</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-openhab</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-print-interface-rsb</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-print-interface-rsb</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-print-registry</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-print-registry</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-psc</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-psc</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-psc-create-kinect</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-psc-create-kinect</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-psc-update-kinect</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-psc-update-kinect</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-query</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-query</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-registry</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-registry</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-registry-editor</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-registry-editor</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-scene-editor</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-scene-editor</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-stage</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-stage</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-task-server</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-task-server</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-validate</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-validate</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bco-visual-remote</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bco-visual-remote</linkTarget>
                                    <symlink>true</symlink>
                                </data>
                                <data>
                                    <type>link</type>
                                    <linkName>/usr/bin/bcozy</linkName>
                                    <linkTarget>/${deb.prefix.bin}/bcozy</linkTarget>
                                    <symlink>true</symlink>
                                </data>

                                <data>
                                    <type>template</type>
                                    <paths>
                                        <path>etc/${project.artifactId}</path>
                                        <!--path>var/lib/${project.artifactId}</path-->
                                        <path>var/log/${project.artifactId}</path>
                                        <!--path>var/run/${project.artifactId}</path-->
                                    </paths>
                                    <mapper>
                                        <type>perm</type>
                                        <user>loader</user>
                                        <group>loader</group>
                                    </mapper>
                                </data>
                            </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <skipTests>true</skipTests>
        <build.appassembler>${project.build.directory}/appassembler</build.appassembler>
        <deb.prefix>opt/openbase/${project.artifactId}</deb.prefix>
        <deb.prefix.lib>${deb.prefix}/lib</deb.prefix.lib>
        <deb.prefix.bin>${deb.prefix}/bin</deb.prefix.bin>
        <appassembler.repo.name>lib</appassembler.repo.name>
    </properties>


    <dependencies>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>manager.util</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>registry.util</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>authentication.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>dal.task</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>dal.visual</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>psc.util</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>manager.scene.visual</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openbase.bco.registry</groupId>
