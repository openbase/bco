    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>

                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.10</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-with-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                        <!--<configuration>-->
                        <!--<descriptorRefs>-->
                        <!--<descriptorRef>jar-with-dependencies</descriptorRef>-->
                        <!--</descriptorRefs>-->
                        <!--<appendAssemblyId>false</appendAssemblyId>-->
                        <!--</configuration>-->
                    </execution>
                </executions>
                <configuration>
                    <binFolder>${deb.prefix.bin}</binFolder>
                    <repositoryLayout>flat</repositoryLayout>
                    <repositoryName>${appassembler.repo.name}</repositoryName>
                    <programs>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.BCOLauncher</mainClass>
                            <id>bco</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.authentication.core.AuthenticatorLauncher</mainClass>
                            <id>bco-authenticator</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>
                                org.openbase.bco.manager.device.binding.openhab.util.configgen.OpenHABConfigGeneratorLauncher
                            </mainClass>
                            <id>bco-binding-openhab-config-generator</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>
                                org.openbase.bco.manager.device.binding.openhab.util.configgen.OpenHABminConfigGenerator
                            </mainClass>
                            <id>bco-binding-openhab-habmin-zwave-config-updater</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.eveson.EvesonLauncher</mainClass>
                            <id>bco-eveson</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.ManagerLauncher</mainClass>
                            <id>bco-manager</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.device.core.FallbackDeviceManagerLauncher</mainClass>
                            <id>bco-manager-device-fallback</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.ontology.lib.OntologyManagerLauncher</mainClass>
                            <id>bco-ontology-manager</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.BCOBindingOpenhabLauncher</mainClass>
                            <id>bco-openhab</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.RSBInterfacePrinter</mainClass>
                            <id>bco-print-interface-rsb</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.registry.print.BCORegistryPrinter</mainClass>
                            <id>bco-print-registry</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.PSCLauncher</mainClass>
                            <id>bco-psc</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.CreateKinectLauncher</mainClass>
                            <id>bco-psc-create-kinect</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.UpdateKinectLauncher</mainClass>
