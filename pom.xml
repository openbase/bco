<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.openbase</groupId>
    <artifactId>bco</artifactId>
    <version>1.6-SNAPSHOT</version>

    <name>BCO</name>
    <inceptionYear>2014</inceptionYear>
    <description>Smart Environment Platform</description>
    
    <url>http://basecubeone.org</url>

    <organization>
        <name>openbase.org</name>
        <url>http://openbase.org</url>
    </organization>

    <developers>
        <developer>
            <id>DivineThreepwood</id>
            <name>Marian Pohling</name>
            <email>divine@openbase.org</email>
            <url>https://github.com/DivineThreepwood</url>
            <organization>openbase.org</organization>
            <organizationUrl>https://github.com/openbase</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
        <developer>
            <id>pLeminoq</id>
            <name>Tamino Huxohl</name>
            <email>taminoh@ymail.com</email>
            <url>https://github.com/pLeminoq</url>
            <organization>openbase.org</organization>
            <organizationUrl>https://github.com/openbase</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>GPLv3</name>
            <url>http://www.gnu.org/licenses/gpl.html</url>
        </license>
    </licenses>

    <packaging>jar</packaging>

    <scm>
        <connection>scm:git:https://github.com/openbase/bco.git</connection>
        <developerConnection>scm:git:https://github.com/openbase/bco.git</developerConnection>
        <url>https://github.com/openbase/bco.git</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.10</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-with-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                        <!--<configuration>-->
                            <!--<descriptorRefs>-->
                                <!--<descriptorRef>jar-with-dependencies</descriptorRef>-->
                            <!--</descriptorRefs>-->
                            <!--<appendAssemblyId>false</appendAssemblyId>-->
                        <!--</configuration>-->
                    </execution>
                </executions>
                <configuration>
                    <binFolder>${deb.prefix.bin}</binFolder>
                    <repositoryLayout>flat</repositoryLayout>
                    <repositoryName>${appassembler.repo.name}</repositoryName>
                    <programs>
                       <program>
                            <mainClass>org.openbase.bco.manager.util.launch.ManagerLauncher</mainClass>
                            <id>bco-manager</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.BCOLauncher</mainClass>
                            <id>bco</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.BCOBindingOpenhabLauncher</mainClass>
                            <id>bco-openhab</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.manager.util.launch.RSBInterfacePrinter</mainClass>
                            <id>bco-print-interface-rsb</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.dal.visual.DalVisualRemote</mainClass>
                            <id>bco-visual-remote</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.registry.launch.RegistryLauncher</mainClass>
                            <id>bco-registry</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.registry.print.BCORegistryPrinter</mainClass>
                            <id>bco-print-registry</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.registry.print.BCOUnitQueryPrinter</mainClass>
                            <id>bco-query</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.PSCLauncher</mainClass>
                            <id>bco-psc</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.CreateKinectLauncher</mainClass>
                            <id>bco-psc-create-kinect</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.util.UpdateKinectLauncher</mainClass>
                            <id>bco-psc-update-kinect</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.sm.SkeletonMergingLauncher</mainClass>
                            <id>bco-psc-skeleton-merging</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                        <program>
                            <mainClass>org.openbase.bco.psc.re.RayExtractorLauncher</mainClass>
                            <id>bco-psc-ray-extractor</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                    </programs>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <verbose>false</verbose>
                            <snapshotExpand>true</snapshotExpand>
                            <!-- expand "SNAPSHOT" to what is in the "USER" env variable -->
                            <snapshotEnv></snapshotEnv>
                            <verbose>true</verbose>
                            <controlDir>${basedir}/src/deb/control</controlDir>
                            <dataSet>

                                <!-- Install Daemon-->
                                <data>
                                  <src>${basedir}/src/deb/init.d</src>
                                  <type>directory</type>
                                  <mapper>
                                    <type>perm</type>
                                    <prefix>/etc/init.d</prefix>
                                    <user>loader</user>
                                    <group>loader</group>
                                  </mapper>
                                </data>
    
                                <!-- Copy Deps-->
                                <data>
                                    <src>${build.appassembler}/${appassembler.repo.name}</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/${deb.prefix.lib}</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                    </mapper>
                                </data>


                                <!-- Copy Bins-->
                                <data>
                                    <src>${build.appassembler}/${deb.prefix.bin}</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/${deb.prefix.bin}</prefix>
                                        <user>loader</user>
                                        <group>loader</group>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>

                                <!-- Link Bins -->
                                <data>
                                  <type>link</type>
                                  <linkName>/usr/bin/bco</linkName>
                                  <linkTarget>/${deb.prefix.bin}/bco</linkTarget>
                                  <symlink>true</symlink>
                                </data>
                                <data>
                                  <type>link</type>
                                  <linkName>/usr/bin/bco-openhab</linkName>
                                  <linkTarget>/${deb.prefix.bin}/bco-openhab</linkTarget>
                                  <symlink>true</symlink>
                                </data>
                                
                                <data>
                                  <type>template</type>
                                  <paths>
                                    <path>etc/${project.artifactId}</path>
                                    <!--path>var/lib/${project.artifactId}</path-->
                                    <path>var/log/${project.artifactId}</path>
                                    <!--path>var/run/${project.artifactId}</path-->
                                  </paths>
                                  <mapper>
                                    <type>perm</type>
                                    <user>loader</user>
                                    <group>loader</group>
                                  </mapper>
                                </data>
                            </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>    

    <properties>
        <skipTests>true</skipTests>
        <build.appassembler>${project.build.directory}/appassembler</build.appassembler>
        <deb.prefix>opt/openbase/${project.artifactId}</deb.prefix>
        <deb.prefix.lib>${deb.prefix}/lib</deb.prefix.lib>
        <deb.prefix.bin>${deb.prefix}/bin</deb.prefix.bin>
        <appassembler.repo.name>lib</appassembler.repo.name>
    </properties>


    <dependencies>
        <dependency>
            <groupId>org.openbase.bco</groupId>
            <artifactId>manager.util</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
